<style>
    #paes {
        scroll-margin-top: 80px;
    }

</style>



@* <div class="container-fluid col-12 p-1" style="height:100vh; background-color: #3D2219;" id="paes"> *@
<div class="container-fluid col-12 p-1" style="min-height: 100vh; background-color: #3D2219;" id="paes">


    <!-- Título e Subtítulo -->
    <div class="text-center  fade-in">
        <h1 class="text-light display-4 pacifico-regular">Pães</h1>
        <p class="text-light lead pacifico-regular">Pães franceses e doces.</p>
    </div>

    <!-- Conteúdo Central -->
    <div class="container">
        <div class="row justify-content-center">

            <!-- Card 1 -->
            <div class="card col-10 col-sm-6 col-md-4 col-xl-2 text-bg-light m-2 h-100 ">
                <img class="img-fluid card-img-top" src="frances.png" style="max-height: 140px; object-fit: cover;" />
                <h4 class="card-header">Pão francês</h4>
                <div class="card-body d-flex flex-column">
                    <p class="card-text flex-grow-1">
                        Fresquinho, com casca crocante e interior macio.
                    </p>
                </div>

            </div>


    



            <!-- Card 3 -->
            <div class="card col-10 col-sm-6 col-md-4 col-xl-2 text-bg-light m-2 h-100">
                <img class="img-fluid card-img-top" src="pao_creme.png" style="max-height: 140px; object-fit: cover;" />
                <h4 class="card-header">Pão de creme</h4>
                <div class="card-body d-flex flex-column">
                    <p class="card-text flex-grow-1">
                        Macio e saboroso, com um toque de creme por cima.
                    </p>
                </div>
            </div>




            <!-- Card 4 -->
            <div class="card col-10 col-sm-6 col-md-4 col-xl-2 text-bg-light m-2 h-100">
                <img class="img-fluid card-img-top" src="pao_goiaba.png" style="max-height: 140px; object-fit: cover;" />
                <h4 class="card-header">Pão de goiaba</h4>
                <div class="card-body d-flex flex-column">
                    <p class="card-text flex-grow-1">
                        Macio e irresistível, com uma camada de goiabada por cima.

                    </p>
                </div>
            </div>



            <!-- Card 5 -->
            <div class="card col-10 col-sm-6 col-md-4 col-xl-2 text-bg-light m-2 h-100">
                <img class="img-fluid card-img-top" src="pao_coco.jpg" style="max-height: 140px; object-fit: cover;" />
                <h4 class="card-header">Pão de coco</h4>
                <div class="card-body d-flex flex-column">
                    <p class="card-text flex-grow-1">
                        Macio e delicado, com uma pitada de coco por cima.

                    </p>
                </div>
            </div>







        </div>
    </div>
</div>
